br
.container
  .card
    .card-header
      .card-header-title.has-text-centered
        | New Moderator
    .card-content
      = form_for Moderator.new, :url => moderation_moderators_path do |f|
        .field
          = f.label :name, "Name"
          = f.text_field :name, class: "input"
        .field
          = f.label :email, "Email"
          = f.text_field :email, class: "input"
        .field
          = f.label :telegram_username, "Telegram Username"
          = f.text_field :telegram_username, class: "input"
        .field
          = f.label :telegram_id, "Telegram ID"
          = f.text_field :telegram_id, class: "input"

        .field
          = f.submit "Add moderator", class: "button"
